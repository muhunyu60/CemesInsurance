<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/topConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@drawable/group92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Options"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <customfonts.MyTextView_SF_Pro_Display_Medium
        android:id="@+id/windScreenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Windscreen"
        app:layout_constraintTop_toBottomOf="@id/topConstraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/windScreenEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="WindScreen Value"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/windScreenTextView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <customfonts.MyTextView_SF_Pro_Display_Medium
        android:id="@+id/radioTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Radio"
        app:layout_constraintTop_toBottomOf="@id/windScreenEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/radioEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Radio"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/radioTextView"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:id="@+id/excessProtectorChkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excess Protector"
        app:layout_constraintTop_toBottomOf="@id/radioEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:id="@+id/politicalViolenceChkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Political Violence"
        app:layout_constraintTop_toBottomOf="@id/excessProtectorChkBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:id="@+id/lossOfUseChkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loss of Use"
        app:layout_constraintTop_toBottomOf="@id/politicalViolenceChkBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:id="@+id/roadRescueChkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Road Rescue"
        app:layout_constraintTop_toBottomOf="@id/lossOfUseChkBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <customfonts.MyTextView_SF_Pro_Display_Medium
        android:id="@+id/get_quote"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:background="@drawable/rect_btn_purple"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="14dp"
        android:text="Add Benefits"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roadRescueChkBox" />

</android.support.constraint.ConstraintLayout>