<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragment.Settings_Fragment"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/settingsTextTopBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="7dp"
            android:background="@color/orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/settingsTextChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/settingsTextTopBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:elevation="0dp" />

        <Button
            android:id="@+id/settingsTextLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/settingsTextChangePassword"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:elevation="0dp" />
    </android.support.constraint.ConstraintLayout>


</FrameLayout>
