<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="fragment.Fragment_Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="268dp"
                android:background="@drawable/group92">

                <include layout="@layout/toolbar_my_wallet_07" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.3dp"
                    android:layout_marginTop="80.3dp"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="53.3dp"
                        android:layout_height="53.3dp"
                        android:src="@drawable/profile1"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2.7dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <customfonts.MyTextView_SF_Pro_Display_Medium
                            android:id="@+id/walletNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.093"
                            android:text="James Chege"
                            android:textColor="#ffffff"
                            android:textSize="15.7sp" />

                        <customfonts.MyTextView_SF_Pro_Display_Medium
                            android:id="@+id/walletEmailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#00000000"
                            android:text="jameschege@usalamatechnology.com"
                            android:textColor="#ffffff"
                            android:textSize="13.7sp" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="185.3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="150dp"
                app:cardCornerRadius="8.7dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20.3dp"
                    android:layout_marginTop="15.3dp"
                    android:orientation="horizontal">

                    <customfonts.MyTextView_SF_Pro_Display_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:letterSpacing="0.093"
                        android:text="Buy Insurance"
                        android:textColor="#7d7e82"
                        android:textSize="12.7sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="50dp"
                    android:background="#f0f0f0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <FrameLayout
                            android:layout_width="50.3dp"
                            android:layout_height="50.3dp"
                            android:background="@drawable/oval">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_group_223"
                                android:id="@+id/hospitals"/>
                        </FrameLayout>

                        <customfonts.MyTextView_SF_Pro_Display_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="7.7dp"
                            android:letterSpacing="0.093"
                            android:text="Domestic"
                            android:textColor="#373743"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="50.3dp"
                            android:layout_height="50.3dp"
                            android:background="@drawable/oval">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_group_199" />
                        </FrameLayout>


                        <customfonts.MyTextView_SF_Pro_Display_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="7.7dp"
                            android:letterSpacing="0.093"
                            android:text="Medical"
                            android:textColor="#373743"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="50.3dp"
                            android:layout_height="50.3dp"
                            android:background="@drawable/oval">

                            <ImageView
                                android:id="@+id/motorInsurancePicture"
                                android:layout_width="35dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_xmlid_1" />
                        </FrameLayout>

                        <customfonts.MyTextView_SF_Pro_Display_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="7.7dp"
                            android:letterSpacing="0.093"
                            android:text="Vehicle"
                            android:textColor="#373743"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="50.3dp"
                            android:layout_height="50.3dp"
                            android:background="@drawable/oval">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_group_217" />
                        </FrameLayout>


                        <customfonts.MyTextView_SF_Pro_Display_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="7.7dp"
                            android:letterSpacing="0.093"
                            android:text="Life"
                            android:textColor="#373743"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <customfonts.MyTextView_SF_Pro_Display_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="28dp"
            android:letterSpacing="0.073"
            android:text="Refer Friends and Get Rewarded"
            android:textColor="#17171f"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="7.3dp">


            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/rect_green"
                android:gravity="center"
                android:letterSpacing="0.073"
                android:paddingBottom="8dp"
                android:paddingLeft="11.5dp"
                android:paddingRight="11.5dp"
                android:paddingTop="7dp"
                android:text="Refer your family and friends"
                android:textColor="#ffffff"
                android:textSize="11.3sp" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circleindicator3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="90dp"
                app:ci_drawable="@drawable/ic_brightness_1_white"
                app:ci_drawable_unselected="@drawable/ic_brightness_1_white_24dp" />

        </FrameLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.3dp"
            android:orientation="vertical">


            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.3dp"
                android:letterSpacing="0.093"
                android:text="Resources Around Me"
                android:textColor="#111427"
                android:textSize="16.3sp" />


            <!--promo recyclerview is here-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text=" "
                />
        </FrameLayout>

   </LinearLayout>



</FrameLayout>
