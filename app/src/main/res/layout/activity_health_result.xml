<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthResult">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/topLinearLayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="268dp"
                android:background="@drawable/group92">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.3dp"
                    android:layout_marginTop="50.3dp"
                    android:orientation="horizontal">

                    <customfonts.MyTextView_SF_Pro_Display_Medium
                        android:id="@+id/walletNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.093"
                        android:text="Available Medical Insurance Policies"
                        android:textColor="#ffffff"
                        android:textSize="34sp" />
                </LinearLayout>
            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="185.3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="150dp"
                app:cardCornerRadius="8.7dp"
                app:cardElevation="3dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <customfonts.MyTextView_SF_Pro_Display_Medium
                        android:id="@+id/additionalOptionsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.093"
                        android:text="Additional Options"
                        android:textColor="#303030"
                        android:textSize="24sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"/>

                    <customfonts.MyTextView_SF_Pro_Display_Medium
                        android:id="@+id/windscreenExampleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.093"
                        android:text="Windscreen"
                        android:textColor="#303030"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/additionalOptionsTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>

                    <customfonts.MyTextView_SF_Pro_Display_Medium
                        android:id="@+id/radioExampleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.093"
                        android:text="Radio"
                        android:textColor="#303030"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/windscreenExampleTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:elevation="3dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        app:layout_constraintTop_toBottomOf="@id/topLinearLayout"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8.7dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>