<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.cemesinsurance.cemes_customer.Web1920_14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_web1920_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--tablayout is here-->

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:backgroundTint="#ffffff"
                app:tabGravity="fill"
                app:tabIndicatorColor="#ee6723"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#0f1418"
                app:tabTextAppearance="@style/MyCustomTextAppearance"
                app:tabTextColor="#969eab" />

            <!--viewpager is here-->

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="#ffffff"></android.support.v4.view.ViewPager>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
